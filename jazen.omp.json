{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#a277ff",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "style": "agnoster_short",
                        "max_depth": 2,
                        "hide_root_location": true
                    },
                    "style": "powerline",
                    "template": " {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#61ffca",
                    "foreground": "#110F18",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " {{ .HEAD }} ",
                    "type": "git"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
